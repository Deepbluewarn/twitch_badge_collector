{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "outDir": "./dist/js",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "types": ["chrome", "webextension-polyfill", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
  }
}
